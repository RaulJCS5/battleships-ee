<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Battleship"
        android:name=".BattleshipApplication"
        >
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Battleship">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".preferences.ui.PreferencesActivity"
            android:exported="false"
            android:noHistory="true"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".lobby.ui.LobbyActivity"
            android:exported="false">
        </activity>
        <activity
            android:name=".game.ui.GameActivity"
            android:exported="false">
        </activity>
        <activity
            android:name=".users.ranking.RakingListActivity"
            android:exported="false" />
        <activity
            android:name=".users.author.AuthorActivity"
            android:exported="false"
            android:label="@string/app_author_screen_title"
            >
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".users.listAuthors.AuthorsListActivity"
            android:exported="false" />
        <activity
            android:name=".users.player.PlayerActivity"
            android:exported="false"
            >
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
    </application>

</manifest>